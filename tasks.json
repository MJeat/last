{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Sass",
            "type": "shell",
            "command": "sass",
            "args": [
                "--watch",
                "path/to/your/scss/files:path/to/compiled/css"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}